<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stupidpeople.descojono.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btnWsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickWsText"
            android:src="@drawable/ic_ws_text" />

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickPrev"
            android:src="@drawable/ic_skip_previous_white_24dp" />

        <ImageButton
            android:id="@+id/btnStopPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickStopPlay"
            android:src="@drawable/ic_replay_white_24dp" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickNext"
            android:src="@drawable/ic_skip_next_white_24dp" />

        <ImageButton
            android:id="@+id/btnLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickLove"
            android:src="@drawable/ic_favorite_border_white_24dp" />


        <ImageButton
            android:id="@+id/btnWsAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickWsAudio"
            android:src="@drawable/ic_action_name" />


    </LinearLayout>

    <TextView
        android:id="@+id/txtchiste"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Chistes malos" />
</LinearLayout>
